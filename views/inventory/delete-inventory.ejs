<%- messages() %>

<% if (errors) { %>
  <div class="notice">
    <ul>
      <% errors.array().forEach(error => { %>
        <li><%= error.msg %></li>
      <% }) %>
    </ul>
  </div>
<% } %>

<div class="form-container">
  <h1><%= title %></h1>

  <form action="/inv/deleted/" method="post" class="inventory-form" id="deleteForm">
    
    <label for="inv_make">Make:</label>
    <input type="text" id="inv_make" name="inv_make" required readonly value="<%= inv_make || '' %>">

    <label for="inv_model">Model:</label>
    <input type="text" id="inv_model" name="inv_model" required readonly value="<%= inv_model || '' %>">

    <label for="inv_year">Year (4 digits):</label>
    <input type="text" id="inv_year" name="inv_year" required readonly pattern="^\d{4}$" title="Please enter a 4-digit year" value="<%= inv_year || '' %>">

    <label for="inv_price">Price:</label>
    <input type="number" id="inv_price" name="inv_price" required readonly step="0.01" min="0" value="<%= inv_price || '' %>">

    <p class="notice">Confirm Deletion - The delete is permanent.</p>

    <button type="submit">Delete Vehicle</button>
    <input type="hidden" name="inv_id" value="<%= inv_id %>">
  </form>
</div>